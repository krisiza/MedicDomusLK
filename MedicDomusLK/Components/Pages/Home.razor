        window.AgentInitializer.init({
            rootId: "JotformAgent-01946e9864977f78bcadeb12c6a4050389cb",
            formID: "01946e9864977f78bcadeb12c6a4050389cb",
            queryParams: ["skipWelcome=1", "maximizable=1"],
            domain: "https://www.jotform.com",
            isInitialOpen: false,
