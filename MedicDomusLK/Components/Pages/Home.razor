@page "/"

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

<style>
    *{
        font-family: "Merriweather", serif;
        font-weight: 300;
        font-style: normal;
    }

    img{
        display:block;
        width:100%;
        height:auto;
    }

    .home-page-container > *{
        margin:0;
        padding: 0;
    }

    .home-page-container{
        display: flex;
        flex-direction:column;
    }

    header{
        height: 30em;
        position: relative;
        width:100%;
    }

    h1
    {
        font-size:2.5em;
    }

    h2{
        font-size: 2em;
    }

    .header-text{
        position: absolute;
        bottom:100px;
        text-align: center;
        width:100%;
        color:white;
    }

    .info-container {
        background-color: #4d73db;
        padding: 2em;
    }

        .info-container nav ul{
                list-style-type: none;
                display: flex;
                gap: 2em;
                align-content:center;
                justify-content:center;
        }

        a{
            text-decoration:none;
            color: white;
            font-weight:bold;
        }
</style>

<PageTitle>Home</PageTitle>
<div class="home-page-container">
    <header>
        <div class="photo-container">
            <img src="/homepage.jpg" />
        </div>
        <div class="header-text">
            <h2>MedicDomus</h2>
            <h1>Vertrauen, Kompetenz und Fürsorge – Seit 40 Jahren für Sie da</h1>
        </div>
    </header>
    <main class="main-container">
        <div class="info-container">
            <nav>
                <ul>
                    <li><a href="#">Mehr über uns</a></li>
                    <li><a href="#">Kontakt</a></li>
                    <li><a href="#">Wie Sie uns finden</a></li>
                </ul>
            </nav>
        </div>
        <div class="buttons-container">
            <button>Termin vereinbaren</button>
            <button>Rechnung anschauen</button>
            <button>Daten verändern</button>
        </div>
    </main>
    <footer>
        <p>Copyright @DateTime.Now.Year MedicDumus. All Rights Reserved</p>
    </footer>
</div>
